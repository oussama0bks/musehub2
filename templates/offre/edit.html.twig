{% extends 'base.html.twig' %}

{% block title %}Éditer l'Offre #{{ offre.id }}{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">
                <i class="fas fa-edit"></i> Éditer l'Offre #{{ offre.id }}
            </h1>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.listing) }}
                    {{ form_widget(form.listing, {'attr': {'class': 'form-control', 'disabled': 'disabled'}}) }}
                    {{ form_errors(form.listing) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.utilisateur) }}
                    {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control', 'disabled': 'disabled'}}) }}
                    {{ form_errors(form.utilisateur) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.prixPropose) }}
                    {{ form_widget(form.prixPropose, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prixPropose) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.statut) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.statut) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.commentaire) }}
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                    {{ form_errors(form.commentaire) }}
                </div>

                <div class="d-flex gap-2">
                    <button class="btn btn-primary">
                        <i class="fas fa-save"></i> Mettre à Jour
                    </button>
                    <a href="{{ path('offre_show', {id: offre.id}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
